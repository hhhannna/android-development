<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/Left_top"
            android:layout_width="92dp"
            android:layout_height="18dp"
            android:id="@+id/Left_top" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/Right_top"
            android:layout_width="71dp"
            android:layout_height="19dp"
            android:id="@+id/Right_top"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="@string/Left_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Left_bottom" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="@string/Right_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Right_bottom" android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="236dp"
            android:layout_height="222dp" app:srcCompat="@drawable/image"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.547"
            app:layout_constraintVertical_bias="0.48"/>
    <TextView
            android:text="@string/imagetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagetxt"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>